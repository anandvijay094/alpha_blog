<h1>Articles Listing</h1>
<% if @articles.length > 0 %>
<table>
<thead>
<tr>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th colspan=3 >Actions</th>
</tr>
</thead>
<tbody>
<tr>
<% @articles.each do |a| %>
  <td> <%= a.Title %> </td>
  <td> <%= a.Description %> </td>
  <td>  <%= a.author  %> </td>
  <td class="action"> <%= link_to 'Show', article_path(a.id) %>  </td>
  <td class="action"> <%= link_to 'Edit', edit_article_path(a.id)  %> </td>
  <td class="action"> <%= link_to 'Delete', article_path(a.id) , method: :delete, data: {confirm:"Are you sure ? >"} %> </td>
</tr>
<% end %>
</tbody>
</table>
<% else %>
<h3 style="color:white;width:fit-content;margin:auto;">No articles available</h3>
<% end %>
<br><br>
<div class="Buttons">
   <%= link_to 'Write Article' , new_article_path %> 
   &nbsp;&nbsp;&nbsp;||&nbsp;&nbsp;&nbsp;
  <%= link_to 'Home', root_path %> 
</div>
